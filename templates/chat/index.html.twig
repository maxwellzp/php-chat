{% extends 'base.html.twig' %}

{% block title %}Chat Application{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <!-- Chat Rooms List -->
            <div class="col-md-4">
                <h4>Chat Rooms</h4>
                <ul class="list-group" id="chatroom-list">
                    {% for chatroom in chatrooms %}
                        <li class="list-group-item">
                            <a href="#"
                               class="chatroom-link text-decoration-none d-block">
                                {{ chatroom.name }}
                            </a>
                        </li>
                    {% else %}
                        <li class="list-group-item text-muted">No chat rooms available.</li>
                    {% endfor %}
                </ul>
{#                <a href="{{ path('create_chatroom') }}" class="btn btn-success mt-3">Create New Room</a>#}
            </div>

            <!-- Chat Window -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Chat Room</div>
                    <div class="card-body" id="chat-messages" style="height: 400px; overflow-y: auto;">
                        {% for message in messages %}
                            <div><strong>User 1</strong>: {{ message.content }}</div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Message Form -->
                <turbo-frame id="message_form">
                    {{ form_start(form) }}
                        <div class="input-group">
                            {{ form_widget(form.content) }}
                            {{ form_widget(form.send) }}
                        </div>
                    {{ form_end(form) }}
                </turbo-frame>
            </div>
        </div>
    </div>
{% endblock %}
