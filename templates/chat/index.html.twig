{% extends 'base.html.twig' %}

{% block title %}Chat Application{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <!-- Chat Rooms List -->
            <div class="col-md-4">
                <h4>Chat Rooms</h4>
                <ul class="list-group" id="chatroom-list">
                    {% for chatroom in chatrooms %}
                        <li class="list-group-item">
                            <a href="#"
                               class="chatroom-link text-decoration-none d-block">
                                {{ chatroom.name }}
                            </a>
                        </li>
                    {% else %}
                        <li class="list-group-item text-muted">No chat rooms available.</li>
                    {% endfor %}
                </ul>
{#                <a href="{{ path('create_chatroom') }}" class="btn btn-success mt-3">Create New Room</a>#}
            </div>

            <!-- Chat Window -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Chat Room</div>
                    <div class="card-body" id="chat-messages" style="height: 400px; overflow-y: auto;">
                        {% for message in messages %}
                            <div><strong>User 1</strong>: {{ message.content }}</div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Message Form -->
                <form method="post" data-turbo-frame="chat-messages" class="mt-3">
                    <div class="input-group">
                        <input type="text" name="content" class="form-control" placeholder="Type a message..." required>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
