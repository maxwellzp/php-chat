{% block create %}
    <turbo-stream action="append" targets="#chatroom-list">
        <template>
            {{ include('chat/_chatroom.html.twig', { room: entity }) }}
        </template>
    </turbo-stream>
{% endblock %}

{% block update %}
    <turbo-stream action="replace" targets="#room_{{ id }}">
        <template>
            {{ include('chat/_chatroom.html.twig', { room: entity }) }}
        </template>
    </turbo-stream>
{% endblock %}

{% block remove %}
    <turbo-stream action="remove" targets="#room_{{ id }}"></turbo-stream>
{% endblock %}
